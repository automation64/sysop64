#
# Imports
#

# shellcheck disable=SC2015,SC2154 source-path=/opt/bl64
source "${S64_CORE_PATH_BL64}/bashlib64-module-fmt.bash" &&
  source "${S64_CORE_PATH_BL64}/bashlib64-module-txt.bash" &&
  source "${S64_CORE_PATH_BL64}/bashlib64-module-xsv.bash" &&
  source "${S64_CORE_PATH_BL64}/bashlib64-module-fs.bash" &&
  source "${S64_CORE_PATH_BL64}/bashlib64-module-k8s.bash" &&
  source "${S64_CORE_PATH_BL64}/bashlib64-module-bsh.bash" ||
  { echo 'Error: unable to load bashlib64' && exit 1; }

#
# Globals
#

# shellcheck disable=SC2034
{
  declare S64_ARGOCD_VERSION='1.4.1'

  # Cluster / Admin ID
  declare S64_ARGOCD_USER_ADMIN='admin'

  # CLI / Connection types
  declare S64_ARGOCD_SET_CONNECTION_PORT_FORWARD='forward'
  declare S64_ARGOCD_SET_CONNECTION_CORE='core'
  declare S64_ARGOCD_SET_CONNECTION_DIRECT='direct'
}

#
# Module parameters
#

# shellcheck disable=SC2034
{
  declare S64_ARGOCD_PATH_CLI="${S64_ARGOCD_PATH_CLI:-}"

  # CLI / Context
  declare S64_ARGOCD_SET_CONTEXT="${S64_ARGOCD_SET_CONTEXT:-argocdcli}"
  # CLI / Connection type
  declare S64_ARGOCD_SET_CONNECTION="${S64_ARGOCD_SET_CONNECTION:-$S64_ARGOCD_SET_CONNECTION_CORE}"
  # Cluster / Namespace
  declare S64_ARGOCD_SET_NAMESPACE="${S64_ARGOCD_SET_NAMESPACE:-argocd}"

  # WebUI / Service
  declare S64_ARGOCD_SET_WUI_SERVICE="${S64_ARGOCD_SET_WUI_SERVICE:-argo-cd-argocd-server}"
  declare S64_ARGOCD_SET_WUI_HTTPS="${S64_ARGOCD_SET_WUI_HTTPS:-443}"
}

#
# Functions
#

function s64_argocd_lib_setup() {
  bl64_dbg_app_show_function
  bl64_k8s_setup &&
    s64_core_lib_command_assign 'S64_ARGOCD_PATH_CLI' 'argocd' &&
    bl64_msg_show_setup 'module parameters' \
      'S64_ARGOCD_SET_CONTEXT' \
      'S64_ARGOCD_SET_NAMESPACE' \
      'S64_ARGOCD_SET_CONNECTION' \
      'S64_ARGOCD_SET_WUI_SERVICE' \
      'S64_ARGOCD_SET_WUI_HTTPS'
}

function s64_argocd_lib_run_argocd() {
  bl64_dbg_app_show_function "$@"
  local connection=''

  bl64_check_command "$S64_ARGOCD_PATH_CLI" "$BL64_VAR_DEFAULT" 'S64_ARGOCD_PATH_CLI' || return $?

  case "$S64_ARGOCD_SET_CONNECTION" in
    "$S64_ARGOCD_SET_CONNECTION_PORT_FORWARD") connection="--port-forward --port-forward-namespace ${S64_ARGOCD_SET_NAMESPACE}" ;;
    "$S64_ARGOCD_SET_CONNECTION_CORE") connection='--core' ;;
    "$S64_ARGOCD_SET_CONNECTION_DIRECT") connection='' ;;
    *)
      bl64_check_alert_parameter_invalid 'S64_ARGOCD_SET_CONNECTION'
      return $?
      ;;
  esac

  bl64_dbg_app_trace_start
  # shellcheck disable=SC2086
  "$S64_ARGOCD_PATH_CLI" \
    --kube-context="$S64_ARGOCD_SET_CONTEXT" \
    $connection "$@"
  bl64_dbg_app_trace_stop
}
