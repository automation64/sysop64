#
# Imports
#

source "${S64_CORE_PATH_BL64}/bashlib64-module-bsh.bash" &&
  source "${S64_CORE_PATH_BL64}/bashlib64-module-fmt.bash" &&
  source "${S64_CORE_PATH_BL64}/bashlib64-module-xsv.bash" &&
  source "${S64_CORE_PATH_BL64}/bashlib64-module-txt.bash" &&
  source "${S64_CORE_PATH_BL64}/bashlib64-module-fs.bash" ||
  { s64_core_lib_check_bl64_load && exit 1; }

#
# Module parameters
#

# shellcheck disable=SC2034
{
  declare S64_LIBVIRT_PATH_CLI="${S64_LIBVIRT_PATH_CLI:-}"
}

#
# Globals
#

# shellcheck disable=SC2034
{
  declare S64_LIBVIRT_VERSION='1.0.0'

  declare S64_LIBVIRT_PATH_CLI_VIRSH='/usr/bin/virsh'

  declare S64_LIBVIRT_GROUP_LIBVIRT='libvirt'

  declare S64_LIBVIRT_URI_QEMU_SYSTEM='qemu:///system'
  declare S64_LIBVIRT_URI_LXC_SYSTEM='lxc:///system'

  declare S64_LIBVIRT_SERVICE_LIBVIRTD='libvirtd'
  declare S64_LIBVIRT_SOCKET_LIBVIRTD='libvirtd.socket'
  declare S64_LIBVIRT_SOCKET_LIBVIRTD_RO='libvirtd-ro.socket'
  declare S64_LIBVIRT_SOCKET_LIBVIRTD_ADMIN='libvirtd-admin.socket'
}

#
# Functions
#

function s64_libvirt_lib_setup() {
  bl64_dbg_app_show_function
}

function s64_libvirt_lib_run_virsh() {
  bl64_dbg_app_show_function "$@"
  bl64_check_command "$S64_LIBVIRT_PATH_CLI_VIRSH" "$BL64_VAR_DEFAULT" 'S64_LIBVIRT_PATH_CLI_VIRSH' ||
    return $?
  bl64_dbg_app_trace_start
  "$S64_LIBVIRT_PATH_CLI_VIRSH" \
    "$@"
  bl64_dbg_app_trace_stop
}

