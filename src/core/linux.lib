  bl64_check_command "$S64_LINUX_PATH_CLI_LSPCI" "$BL64_VAR_DEFAULT" 'S64_LINUX_PATH_CLI_LSPCI' ||
    return $?

  bl64_dbg_app_trace_start
  # shellcheck disable=SC2086
  "$S64_LINUX_PATH_CLI_LSPCI" \
    "$@"
  bl64_dbg_app_trace_stop
}

