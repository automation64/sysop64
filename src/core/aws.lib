#
# Imports
#

# shellcheck disable=SC2015 source-path=/opt/bl64
source "${S64_CORE_PATH_BL64}/bashlib64-module-bsh.bash" &&
  source "${S64_CORE_PATH_BL64}/bashlib64-module-fmt.bash" &&
  source "${S64_CORE_PATH_BL64}/bashlib64-module-xsv.bash" &&
  source "${S64_CORE_PATH_BL64}/bashlib64-module-txt.bash" &&
  source "${S64_CORE_PATH_BL64}/bashlib64-module-fs.bash" ||
  { s64_core_lib_check_bl64_load && exit 1; }

#
# Globals
#

# shellcheck disable=SC2034
{
  declare S64_AWS_VERSION='3.0.0'

  # API Endpoints
  declare S64_AWS_API_EKS_AMI_AL2023_X86_64_STANDARD='amazon-linux-2023/x86_64/standard'
  declare S64_AWS_API_EKS_AMI_AL2='amazon-linux-2'

  # Access mode
  declare S64_AWS_ACCESS_TYPE_PROFILE='PROFILE'
}

#
# Module parameters
#

# shellcheck disable=SC2034
{
  declare S64_AWS_PATH_CLI="${S64_AWS_PATH_CLI:-}"

  # Access mode credentials
  declare S64_AWS_ACCESS_KEY_ID="${S64_AWS_ACCESS_KEY_ID:-}"
  declare S64_AWS_ACCESS_KEY_SECRET="${S64_AWS_ACCESS_KEY_SECRET:-}"
  declare S64_AWS_ACCESS_TOKEN="${S64_AWS_ACCESS_TOKEN:-}"

  # Access mode
  declare S64_AWS_ACCESS_MODE="${S64_AWS_ACCESS_MODE:-$S64_AWS_ACCESS_TYPE_PROFILE}"

  # CLI options
  declare S64_AWS_CLI_PROFILE="${S64_AWS_CLI_PROFILE:-default}"
  declare S64_AWS_CLI_REGION="${S64_AWS_CLI_REGION:-eu-central-1}"
}

#
# External
#

# shellcheck disable=SC2034
{
  export AWS_REGION
  export AWS_PROFILE
}

#
# Functions
#

function s64_aws_lib_setup() {
  bl64_dbg_app_show_function
  s64_core_lib_command_assign 'S64_AWS_PATH_CLI' 'aws' &&
    bl64_msg_show_setup 'module parameters' \
      'S64_AWS_ACCESS_KEY_ID' \
      'S64_AWS_CLI_PROFILE' \
      'S64_AWS_CLI_REGION' \
      'S64_AWS_ACCESS_MODE'
}

# shellcheck disable=SC2154
function s64_aws_lib_cli_setup() {
  bl64_dbg_app_show_function
  if [[ -n "$S64_AWS_CLI_REGION" ]]; then
    AWS_REGION="$S64_AWS_CLI_REGION"
  fi
  if [[ "$S64_AWS_ACCESS_MODE" == "$S64_AWS_ACCESS_TYPE_PROFILE" ]]; then
    AWS_PROFILE="$S64_AWS_CLI_PROFILE"
  fi
  bl64_dbg_app_show_vars 'AWS_REGION' 'AWS_PROFILE'
}

function s64_aws_lib_run_aws() {
  bl64_dbg_app_show_function "$@"
  local debug_flag='--debug'

  bl64_dbg_app_command_is_enabled || debug_flag=' '

  s64_aws_lib_cli_harden
  s64_aws_lib_cli_setup

  bl64_dbg_app_trace_start
  # shellcheck disable=SC2086
  "$S64_AWS_PATH_CLI" \
    $debug_flag \
    --no-cli-pager \
    "$@"
  bl64_dbg_app_trace_stop
}

function s64_aws_lib_cli_harden() {
  bl64_dbg_app_show_function

  bl64_dbg_lib_trace_start
  AWS_PROFILE=''
  AWS_REGION=''
  unset AWS_PAGER
  unset AWS_CA_BUNDLE
  unset AWS_CONFIG_FILE
  unset AWS_DATA_PATH
  unset AWS_DEFAULT_OUTPUT
  unset AWS_DEFAULT_REGION
  unset AWS_MAX_ATTEMPTS
  unset AWS_RETRY_MODE
  unset AWS_ROLE_ARN
  unset AWS_SESSION_TOKEN
  unset AWS_ACCESS_KEY_ID
  unset AWS_CLI_AUTO_PROMPT
  unset AWS_CLI_FILE_ENCODING
  unset AWS_METADATA_SERVICE_TIMEOUT
  unset AWS_ROLE_SESSION_NAME
  unset AWS_SECRET_ACCESS_KEY
  unset AWS_SHARED_CREDENTIALS_FILE
  unset AWS_EC2_METADATA_DISABLED
  unset AWS_METADATA_SERVICE_NUM_ATTEMPTS
  unset AWS_WEB_IDENTITY_TOKEN_FILE
  bl64_dbg_lib_trace_stop
}
