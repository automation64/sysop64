function s64_macos_lib_run_killall() {
  bl64_dbg_app_show_function "$@"
  local verbose=''
  bl64_dbg_app_trace_start
  bl64_msg_app_verbose_is_enabled && verbose='-v'
  # shellcheck disable=SC2086
  "$S64_MACOS_PATH_CLI_KILLALL" \
    $verbose "$@"
  bl64_dbg_app_trace_stop
}

