#
# Imports
#

# shellcheck disable=SC2015 source-path=/opt/bl64
source "${S64_CORE_PATH_BL64}/bashlib64-module-bsh.bash" &&
  source "${S64_CORE_PATH_BL64}/bashlib64-module-fmt.bash" &&
  source "${S64_CORE_PATH_BL64}/bashlib64-module-xsv.bash" &&
  source "${S64_CORE_PATH_BL64}/bashlib64-module-txt.bash" &&
  source "${S64_CORE_PATH_BL64}/bashlib64-module-fs.bash" ||
  { s64_core_lib_check_bl64_load && exit 1; }

#
# Module parameters
#

# shellcheck disable=SC2034
{
  declare S64_GOLANGCI_PATH_CLI="${S64_GOLANGCI_PATH_CLI:-}"
  declare S64_GOLANGCI_SET_LINTERS_ENABLED="${S64_GOLANGCI_SET_LINTERS_ENABLED:-errcheck,unparam,unused,revive,gocritic,revive,asciicheck,bidichk,bodyclose,depguard,dupl,forcetypeassert,goprintffuncname,govet,ineffassign,misspell,nakedret,prealloc,tagliatelle,unconvert}"
  declare S64_GOLANGCI_SET_LINTERS_DISABLED="${S64_GOLANGCI_SET_LINTERS_DISABLED:-exhaustruct,cyclop,godox,lll,gosec}"
}

#
# Globals
#

# shellcheck disable=SC2034
{
  declare S64_GOLANGCI_VERSION='1.0.0'
}

#
# Functions
#

function s64_golangci_lib_setup() {
  bl64_dbg_app_show_function
  s64_core_lib_command_assign 'S64_GOLANGCI_PATH_CLI' 'golangci-lint' &&
    bl64_msg_show_setup 'module parameters' \
      'S64_GOLANGCI_SET_LINTERS_ENABLED' \
      'S64_GOLANGCI_SET_LINTERS_DISABLED'
}

function s64_golangci_lib_run_golangci() {
  bl64_dbg_app_show_function "$@"
  bl64_dbg_app_trace_start
  "$S64_GOLANGCI_PATH_CLI" \
    "$@"
  bl64_dbg_app_trace_stop
}
