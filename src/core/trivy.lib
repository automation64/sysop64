#
# Imports
#

source "${S64_CORE_PATH_BL64}/bashlib64-module-fs.bash" &&
  source "${S64_CORE_PATH_BL64}/bashlib64-module-txt.bash" &&
  source "${S64_CORE_PATH_BL64}/bashlib64-module-xsv.bash" &&
  source "${S64_CORE_PATH_BL64}/bashlib64-module-fmt.bash" &&
  source "${S64_CORE_PATH_BL64}/bashlib64-module-bsh.bash" ||
  { s64_core_lib_check_bl64_load && exit 1; }

#
# Module parameters
#

# shellcheck disable=SC2034
{
  # Global Paths
  declare S64_TRIVY_PATH_CLI="${S64_TRIVY_PATH_CLI:-}"
  # Global Settings
  declare S64_TRIVY_SET_FORMAT="${S64_TRIVY_SET_FORMAT:-table}"
}

#
# Globals
#

# shellcheck disable=SC2034
{
  declare S64_TRIVY_VERSION='3.0.2'
}

#
# Functions
#

function s64_trivy_lib_setup() {
  bl64_dbg_app_show_function
  s64_core_lib_command_assign 'S64_TRIVY_PATH_CLI' 'trivy' &&
    bl64_msg_show_setup 'module parameters' \
      'S64_TRIVY_SET_FORMAT'
}

function s64_trivy_lib_run_trivy() {
  bl64_dbg_app_show_function "$@"
  local verbose_flag=' '
  bl64_check_command "$S64_TRIVY_PATH_CLI" "$BL64_VAR_DEFAULT" 'S64_TRIVY_PATH_CLI' || return $?
  bl64_msg_app_detail_is_enabled || verbose_flag='--quiet'
  bl64_dbg_app_trace_start
  # shellcheck disable=SC2086
  "$S64_TRIVY_PATH_CLI" \
    $verbose_flag \
    --config=/dev/null \
    --timeout=5m \
    "$@"
  bl64_dbg_app_trace_stop
}
