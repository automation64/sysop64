#
# Imports
#

# shellcheck disable=SC2015 source-path=/opt/bl64
source "${S64_CORE_PATH_BL64}/bashlib64-module-bsh.bash" &&
  source "${S64_CORE_PATH_BL64}/bashlib64-module-fmt.bash" &&
  source "${S64_CORE_PATH_BL64}/bashlib64-module-xsv.bash" &&
  source "${S64_CORE_PATH_BL64}/bashlib64-module-txt.bash" &&
  source "${S64_CORE_PATH_BL64}/bashlib64-module-fs.bash" ||
  { s64_core_lib_check_bl64_load && exit 1; }

#
# Module parameters
#

# shellcheck disable=SC2034
{
  declare S64_BANDIT_PATH_CLI="${S64_BANDIT_PATH_CLI:-}"
  declare S64_BANDIT_SET_FORMAT="${S64_BANDIT_SET_FORMAT:-screen}"
}

#
# Globals
#

# shellcheck disable=SC2034
{
  declare S64_BANDIT_VERSION='1.0.1'
}

#
# Functions
#

function s64_bandit_lib_setup() {
  bl64_dbg_app_show_function
  s64_core_lib_command_assign 'S64_BANDIT_PATH_CLI' 'bandit' &&
    bl64_msg_show_setup 'module parameters' \
      'S64_BANDIT_SET_FORMAT'
}

function s64_bandit_lib_run_bandit() {
  bl64_dbg_app_show_function "$@"
  local verbose_flag='--verbose'
  bl64_msg_app_detail_is_enabled || verbose_flag=' '
  bl64_dbg_app_trace_start
  # shellcheck disable=SC2086
  "$S64_BANDIT_PATH_CLI" \
    $verbose_flag \
    "$@"
  bl64_dbg_app_trace_stop
}
