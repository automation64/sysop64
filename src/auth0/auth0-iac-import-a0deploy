declare S64_CORE_PATH_ROOT="${S64_CORE_PATH_ROOT:-/opt/sysop64}"
[[ ! -d "$S64_CORE_PATH_ROOT" ]] && S64_CORE_PATH_ROOT="${HOME}/at64/sysop64"
# shellcheck disable=SC2015 source-path=SCRIPTDIR/..
source "${S64_CORE_PATH_ROOT}/core/core.lib" && source "${S64_CORE_PATH_ROOT}/core/auth0.lib" || { echo "Error: unable to load module library (S64_CORE_PATH_AT64=${S64_CORE_PATH_AT64})" && exit 1; }
# shellcheck disable=SC2015 source-path=/opt/bl64
source "${S64_CORE_PATH_BL64}/bashlib64-module-ui.bash" &&
  source "${S64_CORE_PATH_BL64}/bashlib64-core.bash" || { echo 'Error: unable to load bashlib64' && exit 1; }

declare MY_SOURCE="${1:-auth0-export}"
declare MY_ALLOW_DELETE="${2:-false}"

export AUTH0_ALLOW_DELETE

function my_import() {
  bl64_dbg_app_show_function

  AUTH0_ALLOW_DELETE="$MY_ALLOW_DELETE"
  AUTH0_DOMAIN="$S64_AUTH0_AUTH_DOMAIN"
  AUTH0_CLIENT_ID="$S64_AUTH0_AUTH_CLIENT_ID"
  AUTH0_CLIENT_SECRET="$S64_AUTH0_AUTH_CLIENT_SECRET"

  s64_auth0_lib_run_a0deploy \
    import \
    --input_file "${MY_SOURCE}" \
    --env 'true'
}

function my_initialize() {
  bl64_dbg_app_show_function
  bl64_msg_show_about
  s64_auth0_lib_setup &&
    bl64_check_directory "$MY_SOURCE" &&
    bl64_check_export 'S64_AUTH0_AUTH_DOMAIN' &&
    bl64_check_export 'S64_AUTH0_AUTH_CLIENT_ID' &&
    bl64_check_export 'S64_AUTH0_AUTH_CLIENT_SECRET' &&
    bl64_msg_show_setup "$BL64_VAR_DEFAULT" \
      'MY_SOURCE' \
      'MY_ALLOW_DELETE' &&
    bl64_ui_ask_yesno 'Proceed with the import?. Warning: the operation  will overwrite existing configuration'
}

bl64_lib_script_version_set '1.0.0'
bl64_msg_help_about_set 'Import tenant configuration using Auth0 Deploy CLI'
bl64_dbg_set_level "$S64_CORE_SET_DEBUG" && bl64_msg_set_level "$S64_CORE_SET_VERBOSE" && bl64_msg_set_format "$S64_CORE_SET_FORMAT" && my_initialize || exit $?
bl64_msg_show_batch_start "$BL64_SCRIPT_ID"
my_import
bl64_msg_show_batch_finish $? "$BL64_SCRIPT_ID"
